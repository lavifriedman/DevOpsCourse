def grocery_list(buy_str):
    """fuction receive a string of grocery list and convert that to a list.
    :param buy_str: string of groceryes.
    :type buy_str: str.
    :return list_of_groceryes: list of grocery, base of buy_str.
    :rtype: list"""
    list_of_groceryes = []
    for n in buy_str:
        #check if n is a sing ","
        if (n == ","):
            #save the relevant segment of a grocery from the string as a new value in list_of_groceryes.  
            list_of_groceryes.append(buy_str[:buy_str.index(n)])
            buy_str = buy_str[buy_str.index(n) + 1:]
        #save the last grocery in the string as new value in list_of_groceryes.    
        elif (buy_str.index(n) == len(buy_str)-1):
            list_of_groceryes.append(buy_str)
    return list_of_groceryes


