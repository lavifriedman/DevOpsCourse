def no_duplication(grocery_list):
    """fuction receive a list and remove all the duplications values.
    :param list_of_groceryes: a list of groceryes.
    :type grocery_list: list.
    :return: list of groceryes without duplications.
    :rtype: list"""
    for n in grocery_list:
        if grocery_list.count(n) > 1:
            while grocery_list.count(n) > 1:
                grocery_list.remove(n)
    return grocery_list

def remove_grocery(grocery_list, grocery):
